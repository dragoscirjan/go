{
  "servers": {
    "github": {
      "url": "https://api.githubcopilot.com/mcp/",
      "type": "http"
    },
    "go-language-server": {
      "command": "${userHome}/go/bin/mcp-language-server",
      "args": ["--workspace", "${workspaceFolder}", "--lsp", "gopls"],
      "env": {
        "PATH": "/opt/homebrew/bin:${userHome}/go/bin",
        "GOPATH": "${userHome}/go",
        "GOCACHE": "${userHome}/Library/Caches/go-build",
        "GOMODCACHE": "${userHome}/go/pkg/mod"
      }
    },
    "py-language-server": {
      "command": "${userHome}/go/bin/mcp-language-server",
      "args": ["--workspace", "${workspaceFolder}", "--lsp", "pyright-langserver", "--", "--stdio"],
      "env": {
        "LOG_LEVEL": "DEBUG"
      }
    }
  }
}
